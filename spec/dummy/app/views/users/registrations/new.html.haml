%main.container.general-main-wrap
  .text-center
    %h3.general-login-title=t :sign_up
  = form_for(resource, as: resource_name, html: { class: 'general-form' }, url: registration_path(resource_name)) do |f|
    = devise_error_messages!
    .form-group.mb-30
      = f.label :email, class: 'control-label font-weight-light'
      = f.email_field :email, autofocus: true, class: 'form-control', placeholder: t(:enter_email)
    .form-group.mb-30
      = f.label :password, class: 'control-label font-weight-light'
      = f.password_field :password, autocomplete: 'off', class: 'form-control', placeholder: t(:enter_password)
      =t(:password_validate)
    .form-group.mb-30
      = f.label :password_confirmation, class: 'control-label font-weight-light'
      = f.password_field :password_confirmation, autocomplete: 'off', class: 'form-control', placeholder: t(:confirm_password)
    .text-center
      = f.submit t(:sign_up), class: 'btn btn-default mb-20'
    = render 'devise/shared/links'
